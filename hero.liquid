  </div>
</section>

<script>
  document.addEventListener('scroll', () => {
    const bowl = document.querySelector('.bowl');
    const badge = document.querySelector('.vet-badge');
    const scrollY = window.scrollY;

    if (bowl) {
      const deg = scrollY * 0.25;
      bowl.style.setProperty('--rot', `${deg}deg`);
    }

    if (badge) {
      const badgeDeg = scrollY * 0.1;
      badge.style.setProperty('--badge-rot', `${badgeDeg}deg`);
    }
  });
</script>

</body>
</html>
