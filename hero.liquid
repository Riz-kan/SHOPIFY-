{% liquid
  assign widths = '300, 600, 900, 1200, 1500, 2000, 2500, 3000'
  assign sizes = '100vw'
%}

{% capture media %}
    {% if section.settings.badge_text != blank %}
      <div class="vet-badge">
        <svg viewBox="0 0 100 100" class="badge-star">
          <path d="M50 0L60 35L100 50L60 65L50 100L40 65L0 50L40 35Z" fill="#1E2D32"/>
        </svg>
        <span>{{ section.settings.badge_text }}</span>
      </div>
    {% endif %}

  {% if section.settings.image_1 != blank %}
    {{
      section.settings.image_1
      | image_url: width: 3840
      | image_tag:
        class: 'dog hero__image',
        alt: section.settings.image_1.alt,
        widths: widths,
        width: section.settings.image_1.width,
        height: section.settings.image_1.height,
        sizes: sizes,
        loading: 'eager',
        fetchpriority: 'high'
    }}
  {% endif %}

  {% if section.settings.bowl_image != blank %}
    {{
      section.settings.bowl_image
      | image_url: width: 600
      | image_tag:
        class: 'bowl',
        alt: section.settings.bowl_image.alt,
        loading: 'lazy'
    }}
  {% endif %}
{% endcapture %}

<div
  id="Hero-{{ section.id }}"
  class="hero color-{{ section.settings.color_scheme }}"
  style="--hero-min-height: 100svh;"
>
  <div class="hero__container section--full-width">
    <!-- Text Column -->
    <div class="hero__content-wrapper {{ section.settings.section_width }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h1>{{ block.settings.heading }}</h1>
          {% when 'text' %}
            <p>{{ block.settings.text }}</p>
          {% when 'button' %}
            <a href="{{ block.settings.link }}" class="cta-button">
              {{ block.settings.label }}
            </a>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Media Column -->
    <div class="hero__media-wrapper">
      {{ media }}
    </div>
  </div>
</div>

<script>
  const bowl = document.querySelector('.bowl');
  document.addEventListener('scroll', function () {
    if (!bowl) return;
    const rotateDeg = window.scrollY * 0.15;
    requestAnimationFrame(() => {
      bowl.style.setProperty('--rot', rotateDeg + 'deg');
    });
  });
</script>

{% stylesheet %}
  .hero {
    position: relative;
    min-height: var(--hero-min-height);
    background-color: #C9E7F2;
    font-family: 'Helvetica Neue', sans-serif;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 4rem;
    overflow: hidden;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: -10%;
    width: 60%;
    height: 100%;
    background-color: #BAF1DB;
    border-radius: 0 60% 60% 0;
    z-index: 0;
  }
  .hero__container {
    position: relative;
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    z-index: 1;
  }
  .hero__content-wrapper {
    max-width: 600px;
    padding-left: 2rem;
    z-index: 2;
    text-align: left;
  }
  .hero__content-wrapper h1 {
    font-family: 'Sora', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: #1E2D32;
    line-height: 1.1;
    margin-bottom: 1rem;
  }
  .hero__content-wrapper p {
    font-size: 1.1rem;
    color: rgba(30, 45, 50, 0.8);
    margin-bottom: 1.75rem;
  }
  .cta-button {
    display: inline-block;
    background-color: #ffffff;
    color: #1E2D32;
    padding: 0.75rem 1.5rem;
    border-radius: 40px;
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    transition: background 0.3s ease;
  }
  .cta-button:hover {
    background-color: #f5f5f5;
  }
  .hero__media-wrapper {
    position: relative;
    width: 45%;
    text-align: center;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }
  .dog.hero__image {
    width: 100%;
    max-width: 450px;
    height: auto;
    z-index: 2;
    filter: drop-shadow(0 6px 15px rgba(0,0,0,0.2));
  }
  .bowl {
    max-width: 140px;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 3;
    filter: drop-shadow(0 6px 10px rgba(0,0,0,0.25));
    transform-origin: center;
    transition: transform 0.1s linear;
    transform: rotate(var(--rot, 0deg));
  }
  .vet-badge {
    position: absolute;
    top: 25%;
    left: 10%;
    width: 80px;
    height: 80px;
    z-index: 4;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotate(-25deg);
  }
  .vet-badge .badge-star {
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .vet-badge span {
    position: relative;
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    text-align: center;
    line-height: 1.2;
  }
  @media (max-width: 1024px) {
    .hero {
      flex-direction: column;
      padding: 2rem;
      text-align: center;
    }
    .hero__media-wrapper {
      width: 100%;
      margin-top: 2rem;
    }
    .hero__content-wrapper {
      padding-left: 0;
      text-align: center;
    }
    .bowl {
      left: 50%;
      transform: translateX(-50%) rotate(var(--rot, 0deg));
    }
    .vet-badge {
      left: 50%;
      transform: translateX(-50%) rotate(-25deg);
      top: 5%;
    }
    .dog.hero__image {
      max-width: 100%;
    }
  }
{% endstylesheet %}

