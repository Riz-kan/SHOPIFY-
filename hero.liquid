{% liquid
  assign widths = '300, 600, 900, 1200, 1500, 2000, 2500, 3000'
  assign sizes = '100vw'
%}

{% capture media %}
  {% if section.settings.badge_text != blank %}
    <div class="vet-badge">{{ section.settings.badge_text }}</div>
  {% endif %}

  {% if section.settings.image_1 != blank %}
    {{
      section.settings.image_1
      | image_url: width: 3840
      | image_tag:
        class: 'dog hero__image',
        alt: section.settings.image_1.alt,
        widths: widths,
        width: section.settings.image_1.width,
        height: section.settings.image_1.height,
        sizes: sizes,
        loading: 'eager',
        fetchpriority: 'high'
    }}
  {% endif %}

  {% if section.settings.bowl_image != blank %}
    {{
      section.settings.bowl_image
      | image_url: width: 600
      | image_tag:
        class: 'bowl',
        alt: section.settings.bowl_image.alt,
        loading: 'lazy'
    }}
  {% endif %}
{% endcapture %}

<div
  id="Hero-{{ section.id }}"
  class="hero color-{{ section.settings.color_scheme }}"
  style="--hero-min-height: 100svh;"
>
  <div class="hero__container section--full-width">
    <!-- Text Column -->
    <div class="hero__content-wrapper {{ section.settings.section_width }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h1>{{ block.settings.heading }}</h1>
          {% when 'text' %}
            <p>{{ block.settings.text }}</p>
          {% when 'button' %}
            <a href="{{ block.settings.link }}" class="cta-button">
              {{ block.settings.label }}
            </a>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Media Column -->
    <div class="hero__media-wrapper">
      {{ media }}
    </div>
  </div>
</div>

<script>
  document.addEventListener('scroll', function () {
    const bowl = document.querySelector('.bowl');
    if (!bowl) return;

    const rotateDeg = window.scrollY * 0.25; // speed factor
    bowl.style.transform = `translateX(-50%) rotate(${rotateDeg}deg)`;
  });
</script>

{% stylesheet %}
  .hero {
    position: relative;
    min-height: var(--hero-min-height);
    background-color: #C9E7F2;
    font-family: 'Helvetica Neue', sans-serif;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 4rem;
    overflow: hidden;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: 0; right: -20%;
    width: 75%; height: 100%;
    background-color: #E8F6FA;
    border-top-left-radius: 100% 50%;
    border-bottom-left-radius: 100% 50%;
    z-index: 0;
  }
  .hero__container {
    position: relative;
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    z-index: 1;
  }
  .hero__content-wrapper {
    max-width: 550px;
    z-index: 2;
  }
  .hero__content-wrapper h1 {
    font-size: 2.8rem;
    font-weight: 800;
    color: #1E2D32;
    line-height: 1.2;
    margin-bottom: 1rem;
  }
  .hero__content-wrapper p {
    font-size: 1rem;
    color: #444;
    margin-bottom: 1.5rem;
  }
  .cta-button {
    display: inline-block;
    background-color: #ffffff;
    color: #1E2D32;
    padding: 0.75rem 1.5rem;
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: background 0.3s ease;
  }
  .cta-button:hover {
    background-color: #f0f0f0;
  }
  .hero__media-wrapper {
    position: relative;
    width: 45%;
    text-align: center;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }
  .dog.hero__image {
    width: 100%;
    max-width: 450px;
    height: auto;
    z-index: 2;
  }
  .bowl {
    max-width: 140px;
    position: absolute;
    bottom: 0;
    left: 25%;
    z-index: 3;
    transform-origin: center;
    transition: transform 0.1s linear;
  }
  .vet-badge {
    position: absolute;
    top: 25%;
    left: 10%;
    background-color: #1E2D32;
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 50%;
    font-size: 0.8rem;
    font-weight: bold;
    text-align: center;
    z-index: 4;
    line-height: 1.2;
  }
  @media (max-width: 1024px) {
    .hero {
      flex-direction: column;
      padding: 2rem;
      text-align: center;
    }
    .hero__media-wrapper {
      width: 100%;
      margin-top: 2rem;
    }
    .bowl {
      left: 50%;
      transform: translateX(-50%);
    }
    .vet-badge {
      left: 50%;
      transform: translateX(-50%);
      top: 5%;
    }
    .dog.hero__image {
      max-width: 100%;
    }
  }
{% endstylesheet %}

