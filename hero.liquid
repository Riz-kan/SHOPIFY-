<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Pet Hero Section</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        margin: 0;
      }

      .hero {
        display: flex;
        min-height: 100vh;
        overflow: hidden;
        position: relative;
        top: 0;
        z-index: 0;
      }

      .hero-left {
        width: 60%;
        background-color: #D06F66;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
      }

      .hero-left h1 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
        color: white;
      }

      .hero-left h1 .highlight {
        color: black;
      }

      .hero-left p {
        font-size: 1rem;
        opacity: 0.9;
        margin-bottom: 1.5rem;
      }

      .cta-btn {
        background: white;
        color: #D06F66;
        font-weight: bold;
        text-decoration: none;
        border-radius: 999px;
        padding: 0.65rem 1.25rem;
        display: inline-block;
        width: fit-content;
        white-space: nowrap;
        transition: background 0.3s ease;
      }

      .cta-btn:hover {
        background: #f5f5f5;
      }

      .hero-right {
        width: 40%;
        overflow: hidden;
        position: relative;
      }

      .hero-right picture,
      .hero-right img {
        width: 100%;
        height: 100%;
      }

      .hero-right img {
        width: 250%;
        height: 100%;
        object-fit: cover;
        object-position: right;
      }

      .bowl-deco {
        position: absolute;
        bottom: 1.5rem;
        left: 60%;
        width: 320px;
        height: auto;
        z-index: 3;
        pointer-events: none;
        display: block;
        transform-origin: center;
        will-change: transform;
      }

      @media (max-width: 768px) {
        .hero {
          flex-direction: column-reverse;
          min-height: 100vh;
        }

        .hero-left,
        .hero-right {
          width: 100%;
          height: 50vh;
        }

        .hero-right img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          object-position: center;
        }

        .hero-left {
          padding: 2rem;
          display: flex;
          flex-direction: column;
          justify-content: center;
          text-align: left;
        }

        .hero-left h1 {
          font-size: 2rem;
        }

        .cta-btn {
          font-size: 0.95rem;
        }

        .bowl-deco {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <section class="hero">
      <div class="hero-left">
        <h1>
          {{ section.settings.heading_main }}
          <span class="highlight">{{ section.settings.heading_highlight }}</span>
        </h1>
        <p>Real ingredients for real pets, because they deserve nothing less.</p>
        <a href="/collections/all" class="cta-btn">Shop Food</a>
      </div>
      <div class="hero-right">
        <picture>
          <source
            srcset="https://cdn.shopify.com/s/files/1/0623/9718/6166/files/image_-_2025-07-12T150707.819.jpg?v=1752313043"
            media="(max-width: 768px)"
          >
          <img
            src="https://cdn.shopify.com/s/files/1/0623/9718/6166/files/image_-_2025-07-12T115607.589.jpg?v=1752301590"
            alt="Pet Image"
          >
        </picture>
      </div>

      <!-- Decorative Bowl Image -->
      <img
        src="https://cdn.shopify.com/s/files/1/0623/9718/6166/files/ChatGPT_Image_Jul_13_2025_05_48_44_AM.png?v=1752365947"
        alt="Decorative Bowl"
        class="bowl-deco"
      >
    </section>

    <script>
      // Rotate bowl on scroll
      window.addEventListener('scroll', () => {
        const bowl = document.querySelector('.bowl-deco');
        if (!bowl) return;

        const scrollY = window.scrollY;
        const rotateDeg = scrollY * 0.2; // adjust for speed
        bowl.style.transform = `translateX(-50%) rotate(${rotateDeg}deg)`;
      });
    </script>
  </body>
</html>
{% schema %}
{
  "name": "Hero section",
  "settings": [
    {
      "type": "text",
      "id": "heading_main",
      "label": "Main heading",
      "default": "Wholesome Goodness,"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlight text",
      "default": "Tail-Wagging Cat Food."
    }
  ],
  "presets": [
    { "name": "Hero section" }
  ]
}
{% endschema %}
